<div class="container">
  <div class="text-center">
    <form method="POST" action="/auth/register" class="form-signin">
      <h1 class="h3 mb-3 font-weight-normal">Crie uma conta para continuar</h1>

      <label for="name" class="sr-only">Usuário</label>
      <input type="text" name="name" placeholder="Seu Nome completo" class="form-control">
      <br>

      <label for="username" class="sr-only">Usuário</label>
      <input type="text" name="username" placeholder="Nome de usuário" class="form-control">
      <br>

      <label for="password" class="sr-only">Usuário</label>
      <input type="password" name="password" class="form-control" placeholder="Senha">

      <label for="confirmPassword" class="sr-only">Usuário</label>
      <input type="password" name="confirmPassword" class="form-control" placeholder="Confirme a sua senha">
      <p class="text-danger">{{errorMessage}}</p>

      <div class="checkbox mb-3">
        <button class="btn btn-lg btn-primary btn-block" type="submit">Cadastrar</button>
      </div>
    </form>
  </div>
</div>