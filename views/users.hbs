<div class="container">
  <h1>{{users.length}} Usuários</h1>

  <div class="table-responsive">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th>#</th>
          <th>Nome</th>
          <th>Idade</th>
          <th>Senha</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        {{#each users}}
          <tr>
            <td>{{id}}</td>
            <td>{{name}}</td>
            <td>{{age}}</td>
            <td>{{password}}</td>
            <td>
              <a class="btn btn-sm btn-warning" href="/users/{{id}}/edit">Editar</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
